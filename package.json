{
    "name": "dot-acp-ui",
    "private": true,
    "version": "0.0.1",
    "author": "MVP Workshop",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "preview": "vite preview",
        "prepare": "husky",
        "commit": "cz",
        "test": "pnpm jest",
        "check:packages": "pnpm up --latest --interactive"
    },
    "husky": {
        "hooks": {
            "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true"
        }
    },
    "lint-staged": {
        "**/*.{ts,tsx}": [
            "pnpm prettier --write",
            "pnpm eslint --fix"
        ]
    },
    "dependencies": {
        "@headlessui/react": "^2.0.3",
        "@polkadot/api": "^11.1.1",
        "@polkadot/api-augment": "^11.1.1",
        "@polkadot/extension-dapp": "^0.47.5",
        "@polkadot/extension-inject": "0.47.5",
        "@polkadot/keyring": "^12.6.2",
        "@polkadot/types": "^11.1.1",
        "@polkadot/util": "^12.6.2",
        "@sentry/react": "^8.3.0",
        "@talismn/connect-wallets": "^1.2.5",
        "babel-plugin-transform-import-meta": "^2.2.1",
        "classnames": "^2.5.1",
        "decimal.js": "^10.4.3",
        "i18next": "^23.11.5",
        "lottie-react": "^2.4.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-error-boundary": "^4.0.13",
        "react-helmet-async": "^2.0.5",
        "react-hot-toast": "^2.4.1",
        "react-i18next": "^14.1.2",
        "react-number-format": "^5.3.4",
        "react-router-dom": "^6.23.1"
    },
    "devDependencies": {
        "@babel/core": "^7.24.5",
        "@babel/eslint-parser": "^7.24.5",
        "@babel/preset-env": "^7.24.5",
        "@babel/preset-react": "^7.22.15",
        "@commitlint/cli": "^17.6.7",
        "@commitlint/config-conventional": "^17.6.7",
        "@tanstack/eslint-plugin-query": "^5.35.6",
        "@testing-library/jest-dom": "^6.4.5",
        "@testing-library/react": "^15.0.7",
        "@types/jest": "^29.5.6",
        "@types/node": "^20.12.12",
        "@types/react": "^18.3.2",
        "@types/react-dom": "^18.3.0",
        "@types/react-lottie": "^1.2.7",
        "@typescript-eslint/eslint-plugin": "^7.10.0",
        "@typescript-eslint/parser": "^7.10.0",
        "@vitejs/plugin-react": "^4.3.0",
        "@vitejs/plugin-react-swc": "^3.7.0",
        "autoprefixer": "^10.4.14",
        "commitizen": "^4.3.0",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^8.45.0",
        "eslint-config-prettier": "^8.9.0",
        "eslint-config-react-app": "^7.0.1",
        "eslint-plugin-import": "^2.28.0",
        "eslint-plugin-jsx-a11y": "^6.7.1",
        "eslint-plugin-react": "^7.33.0",
        "eslint-plugin-react-hooks": "^4.6.2",
        "eslint-plugin-react-refresh": "^0.4.7",
        "husky": "^9.0.11",
        "jest": "^29.7.0",
        "lint-staged": "^15.2.4",
        "postcss": "^8.4.31",
        "prettier": "^3.0.0",
        "prettier-plugin-tailwindcss": "^0.5.14",
        "sass": "^1.77.2",
        "tailwindcss": "^3.3.3",
        "ts-jest": "^29.1.3",
        "typescript": "^5.0.2",
        "vite": "^5.2.11",
        "vite-plugin-environment": "^1.1.3",
        "vite-plugin-eslint": "^1.8.1",
        "vite-plugin-mkcert": "^1.16.0",
        "vite-plugin-svgr": "^4.2.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.test\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        }
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
